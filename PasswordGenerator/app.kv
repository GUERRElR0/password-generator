#:import Clipboard kivy.core.clipboard.Clipboard
<box>: 
    #optimize my "logic" code
    #reduce code repetition
    #-------------------------------------------------------------------------
    #put option to save passwords in a tab
    #salva senhas local
    #creates a version without ads, and with the option to save passwords == paid.
    
    do_default_tab: False
    
    tab_pos: 'top_mid'
    tab_width: self.width/2
    tab_height: 100
    
    id: password
    display: data

    canvas.before:
        Color:
            rgba: (45/255, 0/255, 122/255,1)
        Rectangle:
            pos: self.pos
            size: self.size

    Conv:
        text:"Home"      
        BoxLayout:

            cols:1
            rows:9
            padding: 5
            spacing: 10
            orientation: "vertical"

            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout: 
                pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                size_hint: 1, 0.11
                spacing: 10

                TextInput:
                    id: data
                    text: "Password"
                    multiline: False
                    foreground_color: 22/255,0/255,59/255,1
 
                Redondo:
                    size_hint_x: .4
                    text: "Copy" 
                    on_press: Clipboard.copy(data.text)

            Label:
                size_hint: 1, 0.5

            BoxLayout:
                padding: 10
                spacing: 10
                orientation: "vertical"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: 0.7, 0.5
                
                Redondo1:
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint: 0.4, 0.4
                    text:"+"
                    on_press: textinput.text = str(int(textinput.text)+1)
                
                Label:
                    id: textinput
                    text: "8"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    color: 22/255,0/255,59/255,1

                Redondo1:
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint: 0.4, 0.4
                    text:"-"
                    on_press: if textinput.text > "1": textinput.text = str(int(textinput.text)-1) 

            BoxLayout:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: 1, 0.2

                Redondo:  
                    text: "Password"
                    on_press: password.logic(data.text,textinput.text)
                    on_press: data.text = "Password"

    Conv:
        text:"Option"

        BoxLayout:
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 1, 1
            cols: 2
            orientation:"horizontal"
            canvas.before:
                Color:
                    rgba: 22/255, 0/255, 59/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout:
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                size_hint: 1, 0.5
                orientation:"vertical"

                Label:
                    text: "all"
                Che:
                    id: all
                    active: True

                Label:
                    text: "Numbers"
                Che:
                    id: numbers
                    active: True
                    
                Label:
                    text: "lowercase"
                Che:
                    id: lower
                    active: True
                            
            BoxLayout:
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                size_hint: 1, 0.5
                orientation:"vertical"

                Label:
                    text: "Letters"
                Che:
                    id: letters
                    active: True
                        
                Label:
                    text: "Symbols"
                Che:
                    id: symbols
                    active: True

                Label:
                    text: "Uppercase"
                Che:
                    id: upper
                    active: True



<Redondo@Button>
    background_color: (68/255, 0/255, 186/255,1)
    background_normal: ''

    canvas.before:

        Color:
            rgba: 68/255, 0/255, 186/255, 1

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0]

<Redondo1@Button>
    background_color: (45/255, 0/255, 122/255,1)
    background_normal:''

    canvas.before:
        Color:
            rgba: 45/255, 0/255, 122/255, 1

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0]

<Conv@TabbedPanelItem>
    background_color: 45/255, 0/255, 122/255,.9
    background_normal: ''
   
    canvas.before:

        Color:
            rgba: 45/255, 0/255, 122/255, 1

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0]

<Che@CheckBox>
    canvas.before:
        Color:
            rgb: 1,1,1
        Rectangle:
            pos:self.center_x-8, self.center_y-8
            size:[16,16]
        Color:
            rgb: 22/255, 0/255, 59/255
        Rectangle:
            pos:self.center_x-7, self.center_y-7
            size:[14,14]