#:import Clipboard kivy.core.clipboard.Clipboard
<HiddenIcon_ActionPrevious@ActionPrevious>:

    with_previous: False
    app_icon: 'icons/small_icon.png'
    app_icon_width: 0
    app_icon_height: 0
    width: len(self.title+self.app_icon) * 6

<SomeMenu_ActionBar@ActionBar>:

    background_color: 0,0,0,0   
    background_normal: ''
    canvas.before:

        Color:
            rgb: 86/255, 0/255, 235/255

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0]

    ActionView:

        id: ActionView

        HiddenIcon_ActionPrevious:

        ActionGroup:

            id: App_ActionGroup
            mode: 'spinner'
            text: 'Box'

            ActionButton:
            
                text: 'Home'
                on_release: app.root.current = 'first'

            ActionButton:

                text: 'Option'
                on_release: app.root.current = 'option'

            ActionButton:

                text: 'Ads Removes'
                on_release: source = 'https://www.deepl.com/' #acessa a vers√£o paga do app.

<Check@CheckBox>

    canvas.before:
        Color:
            rgb: 1,1,1

        Rectangle:
            pos:self.center_x-8, self.center_y-8
            size:[16,16]

        Color:
            rgb: 22/255, 0/255, 59/255
        Rectangle:
            pos:self.center_x-7, self.center_y-7
            size:[14,14]

<First>:

    id: first
    display: datafirst
    name: 'first'

    BoxLayout:
    
        cols:1
        rows:9
        padding: 5
        spacing: 10
        orientation: 'vertical'
        canvas.before:

            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size

        SomeMenu_ActionBar:

            id: ActionBar

        BoxLayout:

            orientation: 'vertical'
        
            ScrollView: 

                BoxLayout:

                    orientation: 'vertical'   
                    size_hint_y: None
                    height: self.minimum_height

                    BoxLayout:
                        
                        pos_hint: {'center_x': 0.5, 'top': 1}
                        size_hint: 1, None
                        spacing: '10px'
                        height: '100px'

                        TextInput:

                            id: datafirst
                            text: "Password"
                            hint_text: 'Password'
                            multiline: False
                            foreground_color: 22/255,0/255,59/255,1
                            height: "100px"
                            size_hint: 1,None

                        Button:

                            on_release: Clipboard.copy(datafirst.text)
                            background_normal: 'icons/copy.png'
                            background_down: 'icons/CopyRoxo.png.png'

                            height: "100px"
                            width: "100px"
                            size_hint: None,None

                    Label:

                        height: "500px"
                        size_hint: 1,None

                    BoxLayout:

                        orientation: "vertical"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        height: '300px'
                        size_hint: 0.7, None
                        
                        Button:

                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            on_press: digito.text = str(int(digito.text)+1)
                            background_normal: 'icons/more.png'
                            background_down: 'icons/MoreRoxo.png'
                            height: "100px"
                            width: "100px"
                            size_hint: None,None

                        Label:

                            id: digito
                            text: "8"
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            color: 22/255,0/255,59/255,1
                            height: "100px"
                            width: "100px"
                            size_hint: None,None

                        Button:

                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            on_press: if digito.text > "1": digito.text = str(int(digito.text)-1) 
                            background_normal: 'icons/menos.png'
                            background_down: 'icons/MenosRoxo.png'
                        
                            height: "100px"
                            width: "100px"
                            size_hint: None,None

                    AnchorLayout:

                        anchor_x: "center"
                        anchor_y: "center"
                        height: '250px'
                        size_hint: 1, None

                        Button: 

                            on_press: 
                                datafirst.text = "Password"
                                first.logic(digito.text,app.root.get_screen('option'))

                            background_normal: 'icons/generator.png'
                            background_down: 'icons/GeneratorRoxo.png'  
                            
                            height: "100px"
                            width: "320px"
                            size_hint: None,None           
                            
                        Label:

                            height: "110px"
                            size_hint: 1,None
    
<Option>:

    name: 'option'

    BoxLayout:
    
        cols:1
        rows:9
        padding: 5
        spacing: 10
        orientation: 'vertical'
        canvas.before:

            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size

        SomeMenu_ActionBar:

            id: ActionBar    

        BoxLayout:

            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 1, 1
            cols: 2
            orientation:"horizontal"
            canvas.before:

                Color:
                    rgba: 22/255, 0/255, 59/255, 1

                RoundedRectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
            
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                size_hint: 1, 0.5
                orientation:"vertical"

                Label:
                    text: "all"
                Check:
                    id: all
                    active: True

                Label:
                    text: "Numbers"
                Check:
                    id: numbers
                    active: True
                    
                Label:
                    text: "lowercase"
                Check:
                    id: lower
                    active: True
                            
            BoxLayout:

                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                size_hint: 1, 0.5
                orientation:"vertical"

                Label:
                    text: "Letters"
                Check:
                    id: letters
                    active: True
                        
                Label:
                    text: "Symbols"
                Check:
                    id: symbols
                    active: True

                Label:
                    text: "Uppercase"
                Check:
                    id: upper
                    active: True    
